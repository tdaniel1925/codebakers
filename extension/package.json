{
  "name": "codebakers",
  "displayName": "CodeBakers - AI Pattern Enforcement",
  "description": "Enforce coding standards in Claude Code and Cursor. Syncs CLAUDE.md and .cursorrules to ensure AI follows your patterns.",
  "version": "2.0.8",
  "publisher": "codebakers",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "ai",
    "claude",
    "cursor",
    "patterns",
    "rules",
    "claude code",
    "cursorrules"
  ],
  "icon": "media/icon.png",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codebakers.showMenu",
        "title": "CodeBakers: Show Options",
        "category": "CodeBakers"
      },
      {
        "command": "codebakers.initPatterns",
        "title": "CodeBakers: Initialize Patterns",
        "category": "CodeBakers"
      },
      {
        "command": "codebakers.syncPatterns",
        "title": "CodeBakers: Sync Pattern Files",
        "category": "CodeBakers"
      },
      {
        "command": "codebakers.updatePatterns",
        "title": "CodeBakers: Update Patterns from Server",
        "category": "CodeBakers"
      },
      {
        "command": "codebakers.openClaudeMd",
        "title": "CodeBakers: Open CLAUDE.md",
        "category": "CodeBakers"
      },
      {
        "command": "codebakers.refreshStatus",
        "title": "CodeBakers: Refresh Status",
        "category": "CodeBakers"
      },
      {
        "command": "codebakers.showWarnings",
        "title": "CodeBakers: Show Pattern Warnings",
        "category": "CodeBakers"
      },
      {
        "command": "codebakers.openChat",
        "title": "CodeBakers: About (Legacy)",
        "category": "CodeBakers"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "codebakers.showMenu"
        },
        {
          "command": "codebakers.initPatterns"
        },
        {
          "command": "codebakers.syncPatterns"
        },
        {
          "command": "codebakers.updatePatterns"
        },
        {
          "command": "codebakers.openClaudeMd"
        },
        {
          "command": "codebakers.refreshStatus"
        },
        {
          "command": "codebakers.showWarnings"
        }
      ]
    },
    "configuration": {
      "title": "CodeBakers",
      "properties": {
        "codebakers.apiKey": {
          "type": "string",
          "default": "",
          "description": "Your CodeBakers API key for downloading patterns"
        },
        "codebakers.autoSync": {
          "type": "boolean",
          "default": true,
          "description": "Automatically sync CLAUDE.md and .cursorrules when one changes"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --production",
    "compile": "npm run esbuild-base",
    "esbuild-base": "node esbuild.js",
    "esbuild-watch": "node esbuild.js --watch",
    "watch": "npm run esbuild-watch",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^2.22.0",
    "esbuild": "^0.27.2",
    "typescript": "^5.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/codebakers/codebakers-extension"
  }
}
